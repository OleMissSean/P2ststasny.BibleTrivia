<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d58c6d3f">


    <Button
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:text="Year Subtration Practice"
        android:id="@+id/B_calButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22"
        android:textSize="30sp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 out of 0"
        android:id="@+id/ET_calAnswer"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22"
        android:textSize="21sp"
        android:layout_below="@+id/TV_calScoreTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score:"
        android:id="@+id/TV_calScoreTitle"
        android:textSize="30sp"
        android:layout_below="@+id/B_calButton"
        android:layout_alignRight="@+id/ET_calAnswer"
        android:layout_alignEnd="@+id/ET_calAnswer" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Reset Score"
        android:id="@+id/B_resetCalScore"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>