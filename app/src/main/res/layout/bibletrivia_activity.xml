<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#d58c6d3f">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bible Trivia"
        android:id="@+id/TV_bibleTitle"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the appropriate answer to the question."
        android:id="@+id/TV_bibleInstructions"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:id="@+id/TV_bibleQuestion"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
        <RadioGroup
            android:id="@+id/RG_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 1"
                android:id="@+id/RB_answer1"
                android:layout_weight="0" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 2"
                android:id="@+id/RB_answer2"
                android:layout_weight="0" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 3"
                android:id="@+id/RB_answer3"
                android:layout_weight="0.00" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 4"
                android:id="@+id/RB_answer4"
                android:layout_weight="0" />
    </RadioGroup>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/B_bibleQsubmit"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/B_bibleReturn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp" />
</LinearLayout>